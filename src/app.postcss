@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	@font-face {
		font-family: 'Grundschrift Regular';
		font-style: normal;
		font-weight: normal;
		src: local('Grundschrift Regular'), url('/fonts/Grundschrift-Regular.woff') format('woff');
	}
}

@layer components {
	h1 {
		@apply text-3xl mb-3;
	}

	h4 {
		@apply text-xl mb-2;
	}

	.nav-item {
		@apply py-1 text-center hover:underline;
	}

	input,
	select {
		@apply w-full h-12 md:w-72 p-2 rounded-xl border-2;
	}
}
